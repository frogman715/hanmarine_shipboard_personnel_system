import Link from 'next/link'
import MainNavigation from '@/components/MainNavigation'
import ApplicationsTable from './ApplicationsTable'

export default function ApplicationsPage() {
  return (
    <>
      <MainNavigation />
      <main style={{ marginLeft: '220px', padding: '2rem', width: 'calc(100vw - 220px)' }}>
        <style>{`
          .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
          }
          .page-title {
            font-size: 2rem;
            font-weight: bold;
            margin: 0;
          }
          .header-actions {
            display: flex;
            gap: 1rem;
          }
          .btn-primary {
            padding: 0.75rem 1.25rem;
            border-radius: 8px;
            background: #10b981;
            color: white;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
          }
          .btn-primary:hover {
            background: #059669;
            transform: translateY(-2px);
          }
          .btn-secondary {
            padding: 0.75rem 1.25rem;
            border-radius: 8px;
            background: #1f2937;
            color: #e5e7eb;
            border: 1px solid #374151;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
          }
          .btn-secondary:hover {
            background: #374151;
          }
        `}</style>

        <div className="page-header">
          <div>
            <h1 className="page-title">üìù Applications</h1>
            <p style={{ color: '#9ca3af', margin: '0.5rem 0 0' }}>Manage crew applications and submissions</p>
          </div>
        </div>

        <ApplicationsTable />
      </main>
    </>
  )
}
